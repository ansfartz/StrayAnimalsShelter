<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterAskEmailFragment"
    android:background="@drawable/register_activity_background"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/register_aE_goBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrow_back_white"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/register_aE_titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_aE_goBack"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-thin"
        android:text="What is your email address?"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_aE_emailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_aE_titleTV"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:fontFamily="sans-serif-thin"
        android:text="EMAIL ADDRESS"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_aE_emailET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_aE_emailTV"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="sans-serif-thin"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/register_aE_emailDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_aE_emailET"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:fontFamily="sans-serif-thin"
        android:text="This email will be used to login and will be public for other users to see."
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold" />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/register_aE_next_backgroundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="#61FFFFFF"
        app:srcCompat="@drawable/ic_right_arrow_green"
        android:stateListAnimator="@null" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/register_aE_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="#FFFFFF"
        app:srcCompat="@drawable/ic_right_arrow_green"
        android:stateListAnimator="@null"
        android:visibility="gone"/>



</RelativeLayout>